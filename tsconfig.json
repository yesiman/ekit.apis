{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "CommonJS",                     
    "rootDir": "src",                         
    "outDir": "dist",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src", 
    "src/types/**/*.d.ts"                     
  ],
  "exclude": ["node_modules"]
}